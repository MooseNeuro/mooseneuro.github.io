    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center">Publications</h2>
	<Publications />
      </div>
    </section>
-->
<!-- Funders Section -->
<div class="bg-white py-10 sm:py-15" id="funders">
  <div class="mx-auto max-w-7xl px-5 py-3 lg:px-8 sm:text-center">
    <h2 class="text-3xl font-semibold text-gray-900 sm:text-4xl">Funders</h2>
    <div
      class="mx-auto mt-10 grid max-w-lg grid-cols-6 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-5 lg:max-w-none lg:grid-cols-5"
    >
      {
        funders.map((funder) => (
          <Image
            class="col-span-2 max-h-12 w-full object-contain lg:col-span-1"
            src={funder.src}
            alt={funder.name}
            width="158"
            height="48"
          />
        ))
      }
    </div>
  </div>
</div>

<!-- Call to Action Section -->
<section class="py-12 bg-white">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="bg-blue-50 p-6 rounded-lg shadow-sm">
        <h3 class="text-xl font-semibold mb-3">Blog</h3>
        <p class="text-gray-600 mb-4">
          Explore insights, updates, and stories on our Software and community.
        </p>
        <a
          href="/blogs"
          class="text-blue-600 hover:text-blue-800 inline-flex items-center"
          >Learn more <span class="ml-1">â†’</span></a
        >
      </div>
      <div class="bg-blue-50 p-6 rounded-lg shadow-sm">
        <h3 class="text-xl font-semibold mb-3">Events</h3>
        <p class="text-gray-600 mb-4">
          Explore workshops, webinars, and neuroscience events.
        </p>
        <a
          href="/workshops"
          class="text-blue-600 hover:text-blue-800 inline-flex items-center"
          >Learn more <span class="ml-1">â†’</span></a
        >
      </div>
      <div class="bg-blue-50 p-6 rounded-lg shadow-sm">
        <h3 class="text-xl font-semibold mb-3">Discussion and support</h3>
        <p class="text-gray-600 mb-4">
          Discussions related to MOOSE. Find help, ask questions, and share.
        </p>
        <a
          href="/community#support"
          class="text-blue-600 hover:text-blue-800 inline-flex items-center"
          >Learn more <span class="ml-1">â†’</span></a
        >
      </div>
    </div>
  </div>
</section>
</BaseLayout>
