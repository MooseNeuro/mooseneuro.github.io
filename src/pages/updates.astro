---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
const updates = [
  { page: "News", link: "/news" },
  { page: "Workshops", link: "/workshops" },
  { page: "Activity", link: "/activity" },
];
---

<BaseLayout title="Updates">
  <!-- Hero section - mobile-first design -->
  <div class="relative isolate overflow-hidden bg-gray-900 py-12 sm:py-16 lg:py-24">
    <!-- Background decorative elements - completely hidden on mobile -->
    <div
      class="hidden lg:absolute lg:-top-10 lg:right-1/2 lg:-z-10 lg:mr-10 lg:block lg:transform-gpu lg:blur-3xl"
      aria-hidden="true"
    >
      <div
        class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-[#ff4694] to-[#776fff] opacity-20"
        style="
          clip-path: polygon(
            74.1% 44.1%,
            100% 61.6%,
            97.5% 26.9%,
            85.5% 0.1%,
            80.7% 2%,
            72.5% 32.5%,
            60.2% 62.4%,
            52.4% 68.1%,
            47.5% 58.3%,
            45.2% 34.5%,
            27.5% 76.7%,
            0.1% 64.9%,
            17.9% 100%,
            27.6% 76.8%,
            76.1% 97.7%,
            74.1% 44.1%
          );
        "></div>
    </div>
    <div
      class="hidden lg:absolute lg:-top-52 lg:left-1/2 lg:-z-10 lg:-translate-x-1/2 lg:transform-gpu lg:blur-3xl"
      aria-hidden="true"
    >
      <div
        class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-[#ff4694] to-[#776fff] opacity-20"
        style="
          clip-path: polygon(
            74.1% 44.1%,
            100% 61.6%,
            97.5% 26.9%,
            85.5% 0.1%,
            80.7% 2%,
            72.5% 32.5%,
            60.2% 62.4%,
            52.4% 68.1%,
            47.5% 58.3%,
            45.2% 34.5%,
            27.5% 76.7%,
            0.1% 64.9%,
            17.9% 100%,
            27.6% 76.8%,
            76.1% 97.7%,
            74.1% 44.1%
          );
        "></div>
    </div>

    <!-- Mobile-first container with proper padding -->
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
      <div class="text-center mx-auto max-w-2xl lg:mx-0 lg:text-left">
        <h1 class="text-3xl font-semibold text-white sm:text-4xl md:text-5xl lg:text-7xl">
          Updates
        </h1>
      </div>
    </div>
  </div>

  <!-- Main content section - mobile-first approach -->
  <section class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="py-6 sm:py-8 lg:py-12">
      <!-- Mobile-first card layout -->
      <div class="space-y-4 sm:space-y-6 lg:space-y-8">
        {
          updates.map((page) => (
            <a
              href={page.link}
              class="block w-full bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
            >
              <!-- Mobile: stacked layout, Desktop: horizontal layout -->
              <div class="flex flex-col md:flex-row md:items-center">
                <!-- Image container - mobile-first sizing -->
                <div class="flex-shrink-0 w-full md:w-48">
                  <img
                    class="object-cover w-full h-48 rounded-t-lg md:h-32 md:rounded-l-lg md:rounded-t-none"
                    src="/moose_logo.png"
                    alt={`${page.page} illustration`}
                    loading="lazy"
                  />
                </div>
                
                <!-- Content container - mobile-first padding -->
                <div class="flex-1 p-4 sm:p-6 md:p-8">
                  <h2 class="text-xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-2xl md:text-3xl">
                    {page.page}
                  </h2>
                  
                  <!-- Optional description - uncomment if needed -->
                  {/* <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 sm:text-base">
                    Explore the latest {page.page.toLowerCase()} and stay updated with our community.
                  </p> */}
                  
                  <!-- Mobile-friendly CTA indicator -->
                  <div class="mt-3 flex items-center text-sm text-blue-600 dark:text-blue-400">
                    <span>View {page.page}</span>
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Ensure script runs after DOM is loaded
  document.addEventListener('DOMContentLoaded', function() {
    const nav = document.getElementsByTagName("header")[0];
    if (nav) {
      nav.classList.add("bg-black");
    }
  });
</script>