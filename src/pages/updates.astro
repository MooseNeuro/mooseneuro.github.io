---
import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
const updates = [
  { page: "News", link: "/news" },
  { page: "Workshops", link: "/workshops" },
  { page: "Activity", link: "/activity" },
];
---

<BaseLayout title="Updates">
  <!-- Hero section with mobile-first design -->
  <div
    class="relative isolate overflow-hidden bg-gray-900 py-16 sm:py-24 lg:py-32"
  >
    <!-- Background decorative elements - hidden on mobile for performance -->
    <div
      class="hidden lg:absolute lg:-top-10 lg:right-1/2 lg:-z-10 lg:mr-10 lg:block lg:transform-gpu lg:blur-3xl"
      aria-hidden="true"
    >
      <div
        class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-[#ff4694] to-[#776fff] opacity-20"
        style="
          clip-path: polygon(
            74.1% 44.1%,
            100% 61.6%,
            97.5% 26.9%,
            85.5% 0.1%,
            80.7% 2%,
            72.5% 32.5%,
            60.2% 62.4%,
            52.4% 68.1%,
            47.5% 58.3%,
            45.2% 34.5%,
            27.5% 76.7%,
            0.1% 64.9%,
            17.9% 100%,
            27.6% 76.8%,
            76.1% 97.7%,
            74.1% 44.1%
          );
        "
      >
      </div>
    </div>
    <div
      class="hidden lg:absolute lg:-top-52 lg:left-1/2 lg:-z-10 lg:-translate-x-1/2 lg:transform-gpu lg:blur-3xl"
      aria-hidden="true"
    >
      <div
        class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-[#ff4694] to-[#776fff] opacity-20"
        style="
          clip-path: polygon(
            74.1% 44.1%,
            100% 61.6%,
            97.5% 26.9%,
            85.5% 0.1%,
            80.7% 2%,
            72.5% 32.5%,
            60.2% 62.4%,
            52.4% 68.1%,
            47.5% 58.3%,
            45.2% 34.5%,
            27.5% 76.7%,
            0.1% 64.9%,
            17.9% 100%,
            27.6% 76.8%,
            76.1% 97.7%,
            74.1% 44.1%
          );
        "
      >
      </div>
    </div>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center lg:mx-0 lg:text-left">
        <h1 class="text-4xl font-semibold text-white sm:text-5xl lg:text-7xl">
          Updates
        </h1>
      </div>
    </div>
  </div>
  <section class="mx-auto p-4 sm:px-6 lg:px-8 max-w-7xl">
    <article class="w-full p-4">
      {
        updates.map((page) => (
          <a
            href={page.link}
            class="flex flex-col m-10 items-center bg-white border border-gray-200 rounded-lg shadow-sm md:flex-row hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700 h-84"
          >
            <img
              class="object-cover p-5 w-full rounded-t-lg h-100 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg"
              src="/src/assets/moose_logo.png"
              alt=""
            />
            <div class="flex flex-col justify-between p-4 leading-normal">
              <h5 class="mb-2 ps-10 text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white">
                {page.page}
              </h5>
              {/* <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                Here are the biggest enterprise technology acquisitions of 2021
                so far, in reverse chronological order.
              </p> */}
            </div>
          </a>
        ))
      }
    </article>
  </section>
</BaseLayout>
<script>
  const nav = document.getElementsByTagName("header")[0];
  nav.classList.add("bg-black");
</script>
